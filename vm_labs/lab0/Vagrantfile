# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # Use Alpine Linux as base
  config.vm.box = "generic/alpine319"

  # VM configuration
  config.vm.hostname = "nmap-target"

  # Network configuration - private network for scanning
  config.vm.network "private_network", ip: "192.168.56.10"

  # Port forwarding for easy access (optional)
  config.vm.network "forwarded_port", guest: 22, host: 2222, id: "ssh"
  config.vm.network "forwarded_port", guest: 80, host: 8080, id: "http"
  config.vm.network "forwarded_port", guest: 23, host: 2323, id: "telnet"
  config.vm.network "forwarded_port", guest: 3306, host: 3306, id: "mysql"

  # VirtualBox specific settings
  config.vm.provider "virtualbox" do |vb|
    vb.name = "nmap-workshop-target"
    vb.memory = "512"
    vb.cpus = 1
  end

  # Provisioning - setup vulnerable services
  config.vm.provision "shell", path: "provision.sh"

  # Copy web files
  config.vm.provision "file", source: "www/", destination: "/tmp/www"
  config.vm.provision "shell", inline: "sudo cp -r /tmp/www/* /var/www/localhost/htdocs/"
end
